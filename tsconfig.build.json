{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "stripInternal": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "paths": {
      "@cereon/dashboard": ["./src/index.ts"],
      "@cereon/dashboard/*": ["./src/*"],
      "@/ui/*": ["./src/ui/*"],
      "@/ui": ["./src/ui"]
    }
  },
  "include": ["src"]
}
